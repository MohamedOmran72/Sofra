<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <!-- Change Author text color from black to white   -->
    <style name="AuthText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Author with google_sans_bold font family text -->
    <style name="AuthBoldText" parent="AuthText">
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <!-- Red text with google_sans_bold font family text -->
    <style name="RedBoldText" parent="AuthBoldText">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <!-- Food Item with google_sans font family text -->
    <style name="ItemText">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!-- Food Item title with google_sans_bold font family text and black color -->
    <style name="ItemTitleText" parent="ItemText">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!-- Order item title text view -->
    <style name="OrderItemTitleTextView" parent="ItemTitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Order item text view -->
    <style name="OrderItemTextView" parent="ItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Author EditText hint, text and underline with white color -->
    <style name="AuthEditText" parent="AuthText">
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <!-- Food item EditText -->
    <style name="FoodEditText" parent="ItemText">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textColorHint">@color/primaryDarkColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:background">@drawable/shape_rectangle_12</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <!-- Profile EditText -->
    <style name="ProfileEditText" parent="ItemText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:background">@drawable/shape_rectangle_12</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/secondaryDarkColor</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <!-- Button style  -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Red Radius Button style -->
    <style name="RedRadiusButton" parent="Button">
        <item name="android:background">@drawable/button_background_red_radius</item>
    </style>

    <!-- ImageButton style  -->
    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <!-- Item order button -->
    <style name="ItemOrderButton" parent="Button">
        <item name="android:gravity">center|start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
    </style>

    <style name="AppTheme.ProfileSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/secondaryDarkColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>