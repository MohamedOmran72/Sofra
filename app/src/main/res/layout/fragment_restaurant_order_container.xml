<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.order.restaurant.RestaurantOrderContainerFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_restaurant_order_container_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryDarkColor"
        app:tabIndicatorColor="@color/secondaryColor"
        app:tabTextAppearance="@style/ItemTitleText" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_restaurant_order_container_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>